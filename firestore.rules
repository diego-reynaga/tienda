rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Permitir acceso a productos solo a usuarios autenticados
    match /Productos/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acceso a compras solo a usuarios autenticados
    match /compras/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acceso a contactos
    match /contacto/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Permitir acceso a mensajes de chat
    match /mensajes-chat/{document} {
      allow read, write: if request.auth != null;
    }
  }
}